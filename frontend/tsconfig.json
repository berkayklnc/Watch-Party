{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "react/*": ["node_modules/@types/react/*"],
      "@helpers/*": ["helpers/*"],
      "@app/*": ["app/*"],
      "@routes/*": ["app/routes/*"]
    }
  },
  "include": ["src"]
}
